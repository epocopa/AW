<%- include('header_init'); -%>
<main>
    <h1>Nuevo Usuario</h1>
    <form method="POST">
        <table>
            <tr>
                <td>Email:</td>
                <td><input class="input_text" type='text' name='email' value='' required></td>
            </tr>
            <tr>
                <td>Contrase√±a:</td>
                <td><input class="input_text" type='password' name='password' required/></td>
            </tr>
            <tr>
                <td>Nombre completo:</td>
                <td><input class="input_text" type='text' name='fullname' required/></td>
            </tr>
            <tr>
                <td>Sexo:</td>
                <td>
                    <input class="input_radio" type="radio" name='sex' value="M"/>Masculino
                    <input class="input_radio" type="radio" name='sex' value="F"/>Femenino
                    <input class="input_radio" type="radio" name='sex' value="O"/>Otro
                </td>
            </tr>
            <tr>
                <td>Fecha de nacimiento:</td>
                <td><input class="input_date" type='date' name='birthdate' required/></td>
            </tr>
            <tr>
                <td>Imagen de perfil:</td>
                <td><input class="input_image" type='file' accept="image/png, image/jpeg" name='photo'/></td>
            </tr>
            <tr>
                <td><input class="input_button" id="send" type="submit" value="Enviar"/></td>
            </tr>
        </table>
    </form>
    <% if (typeof errorMsg != "undefined") { %>
        <h3 class="error_msg"><%= errorMsg %></h3>
    <% } %>
</main>
<%- include('footer'); -%>