<%- include('header'); -%>
<main>
    <h1>Nuevo Usuario</h1>
    <form name='f' action="login" method='POST'>
        <table>
            <tr>
                <td>Email:</td>
                <td><input class="input_text" type='text' name='email' value=''></td>
            </tr>
            <tr>
                <td>Contrase√±a:</td>
                <td><input class="input_text" type='password' name='password' /></td>
            </tr>
            <tr>
                <td>Nombre completo:</td>
                <td><input class="input_text" type='text' name='fullname' /></td>
            </tr>
            <tr>
                <td>Sexo:</td>
                <td>
                    <input class="input_radio" type="radio" name='sex' value="male" />Masculino
                    <input class="input_radio" type="radio" name='sex' value="female" />Femenino
                    <input class="input_radio" type="radio" name='sex' value="other" />Otro
                </td>
            </tr>
            <tr>
                <td>Fecha de nacimiento:</td>
                <td><input class="input_date" type='date' name='birthdate' /></td>
            </tr>
            <tr>
                <td>Imagen de perfil:</td>
                <td><input class="input_image" type='file' accept="image/png, image/jpeg" name='image' /></td>
            </tr>
            <tr>
                <td><input class="input_button" id="send" type="submit" value="Enviar" /></td>
            </tr>
        </table>
    </form>
</main>
<%- include('footer'); -%>