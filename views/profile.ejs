<%- include('header_loged'); -%>
    <main>
        <h1>Perfil</h1>
        <div class="user">
            <div id="user_image" class="user_info"><img src="/images/profile_logo.png" alt="imagen de usuario"></div>
            <div id="user_name" class="user_info"><%= user.fullname %></div>
            <div id="user_years" class="user_info"><%= age %> a√±os</div>
            <div id="user_gender" class="user_info"><%= user.sex %></div>
            <div id="user_points" class="user_info"><%= user.points %> puntos</div>
            <div id="user_modify" class="user_info">
                <% if (allowed) { %>
                <form action="modify">
                    <input class="input_button" type="submit" value="Modificar perfil" />
                </form>
                <% }%>           
            </div>
        </div>
    </main>
